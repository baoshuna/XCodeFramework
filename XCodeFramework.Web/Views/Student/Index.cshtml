@model IEnumerable<XCodeFramework.Web.Models.Student.StudentModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("导出用户Async", "ExportAsync", "Student")
@Html.ActionLink("导出用户", "Export", "Student")
@Html.ActionLink("导入用户", "Import", "Student")

<p class="btn">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<script>
    $("#export").click(function () {
        $.ajax({
            type: 'post',
            url: '@Url.Action("export","Student")',
            success: function (resp) {
                console.log('导出Excel成功')
            },
            error: function () {
                console.log('导出Excel失败')
            }
        })
    })
</script>